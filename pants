MY_DIR=$(dirname $0)
export BUILD_ROOT=${MY_DIR}
export PYTHONPATH=${MY_DIR}/src/python

if [ -z "$ANT_OPTS" ]; then
  export ANT_OPTS="-Xmx1g -XX:MaxPermSize=512m"
fi

PYTHON=${PYTHON:=/usr/bin/env python2.6}
${PYTHON} ${MY_DIR}/src/python/twitter/pants/bin/pants_exe.py "$@"
