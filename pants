#!/usr/bin/env bash
# Copyright 2014 Pants project contributors (see CONTRIBUTORS.md).
# Licensed under the Apache License, Version 2.0 (see LICENSE).

# Required on OS X.
export set ARCHFLAGS=-Wno-error=unused-command-line-argument-hard-error-in-future

HERE=$(cd `dirname "${BASH_SOURCE[0]}"` && pwd)

REQUIREMENTS=(
  ${HERE}/3rdparty/python/requirements.txt
  ${HERE}/3rdparty/python/twitter/commons/requirements.txt
)

PANTS_EXE=${HERE}/src/python/pants/bin/pants_exe.py
PANTS_BINARY=src/python/pants/bin:pants
PANTS_PEX="${HERE}/pants.pex"

function log() {
  echo -e "$@" 1>&2
}

function die() {
  (($# > 0)) && log "$@"
  exit 1
}

function venv_dir() {
  if [ ! -z "${PANTS_DEV}" ]; then
    echo ${HERE}/build-support/pants_dev_deps.venv
  else
    echo ${HERE}/build-support/pants_deps.venv
  fi
}

function fingerprint_data() {
  openssl md5 | cut -d' ' -f2
}

function activate_venv() {
  source "$(venv_dir)/bin/activate"
}

function create_venv() {
  rm -rf "$(venv_dir)"
  "${HERE}/build-support/virtualenv" "$(venv_dir)"
}

function activate_pants_bare() {
  fingerprint=""
  for req in ${REQUIREMENTS[@]}; do
    fingerprint="${fingerprint}$(cat ${req} | fingerprint_data)"
  done
  fingerprint=$(echo "${fingerprint}" | fingerprint_data)

  BOOTSTRAPPED_FILE="$(venv_dir)/BOOTSTRAPPED.${fingerprint}"

  if ! [ -f ${BOOTSTRAPPED_FILE} ]; then
    log "Bootstrapping pants_deps with requirements:"
    for req in ${REQUIREMENTS[@]}; do
      log "  ${req}"
    done

    if [ ! -z "${PANTS_DEV}" ]; then
      # Install as an egg so IDEs can grok all deps. Installing as sources may
      # run afoul of this bug: http://youtrack.jetbrains.com/issue/PY-6477.
      # TODO: Remove the --egg once this is resolved. It won't work in the wheel world anyway.
      pip_extra="--egg"
    else
      pip_extra=""
    fi

    create_venv
    activate_venv
    for req in ${REQUIREMENTS[@]}; do
      pip install ${pip_extra} -r "${req}" || die "Failed to install requirements from ${req}."
    done
    touch "${BOOTSTRAPPED_FILE}"
  else
    activate_venv
  fi
}

function run_pants_bare() {
  activate_pants_bare
  PYTHONPATH=${HERE}/src/python python ${PANTS_EXE} "$@"
}

function exec_pants_bare() {
  activate_pants_bare
  PYTHONPATH=${HERE}/src/python exec python ${PANTS_EXE} "$@"
}

if [ ! -z "${PANTS_DEV}" ]; then
  log "*** Running pants in dev mode from ${PANTS_EXE} ***"
  exec_pants_bare "$@"
else
  if [ ! -e "${PANTS_PEX}" ]; then
    log "Building pants.pex to ${PANTS_PEX}..."
    # TODO(John sirois): Re-plumb build such that it grabs constraints from the built python_binary
    # target(s).
    rm -rf ${PANTS_PEX} && \
    run_pants_bare build -v -i "CPython>=2.6,<3" -i "CPython>=3.3" ${PANTS_BINARY} && \
    mv -v ${HERE}/dist/pants.pex ${PANTS_PEX} && \
    chmod +x ${PANTS_PEX}
  fi
  exec "${PANTS_PEX}" "$@"
fi
