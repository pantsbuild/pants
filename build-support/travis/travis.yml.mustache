    - *base_osx_build_engine_env
    - CACHE_NAME=osxpexbuild.py2
    - BOOTSTRAPPED_PEX_KEY_SUFFIX=py2.osx
    - BOOTSTRAP_ARGS='-2'

py3_osx_build_engine: &py3_osx_build_engine
