thrift1 = Target(
  sources=None,
)

thrift2 = StructWithDeps(
  sources={},
  dependencies=[
    ':thrift1',
  ]
)

java1 = Target(
  configurations=[
    PublishConfig(
      default_repo=':public',
      repos={
        'jake': Struct(
          url='https://dl.bintray.com/pantsbuild/maven'
        ),
        'jane': ':public'
      }
    ),
    # TODO(John Sirois): Just use 1 config - this mixed embedded and referenced items just show
    # off / prove the capabilities of the new BUILD graph parser.
    ':nonstrict',
    ApacheThriftConfig(
      version='0.10.0',
      strict=True,
      lang='java',
      dependencies=[
        ':thrift2',
      ]
    ),
  ]
)

nonstrict = ApacheThriftConfig(
  version='0.10.0',
  strict=False,
  lang='java'
)

public = Struct(
  url='https://oss.sonatype.org/#stagingRepositories'
)
