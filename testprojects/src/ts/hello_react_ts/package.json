{
  "name": "@pants/hello-react-ts",
  "version": "0.0.1",
  "description": "Testing tsx interop",
  "main": "./src/index.tsx",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules $NODE_OPTIONS jest",
    "build": "esbuild src/index.tsx --bundle --outfile=dist/main.js"
  },
  "devDependencies": {
    "@babel/preset-react": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.9.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "copy-webpack-plugin": "13.0.1",
    "css-loader": "7.1.2",
    "esbuild": "0.25.11",
    "html-webpack-plugin": "5.6.4",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "style-loader": "4.0.0",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.ts",
      "\\.(css|less)$": "<rootDir>/src/__mocks__/styleMock.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
